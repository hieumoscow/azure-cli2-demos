# Runs a Docker Container (Infinite Mario) on Web App Service with a Linux Worker on Microsoft Azure

# Infinite Mario in HTML5 JavaScript - using Canvas and Audio elements
# https://hub.docker.com/r/pengbai/docker-supermario/

az group create --name sm-rg --location "Southeast Asia" --output jsonc
az appservice plan create --sku S1 --name sng_asp2 --is-linux --location "Southeast Asia" --resource-group "sm-rg" --output jsonc
az webapp create --resource-group sm-rg --name smwww --deployment-container-image-name pengbai/docker-supermario:latest --plan sng_asp2 --output jsonc
# http://smwww.azurewebsites.net/

az webapp delete --name smwww --resource-group sm-rg
az group delete --resource-group sm-rg
